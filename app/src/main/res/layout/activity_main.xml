<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:src="@drawable/black_geometry"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/name"
            android:hint="Name"
            android:textSize="36dp"
            android:textColor="#eeeeee"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:layout_above="@+id/position"
            android:layout_toRightOf="@+id/company"
            android:layout_toEndOf="@+id/company" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/position"
            android:hint="Position"
            android:textSize="18dp"
            android:textColor="#cccccc"
            android:layout_marginBottom="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/company"
            android:hint="Company"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginLeft="163dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/otherinfo"
            android:hint="Email\nTelephone"
            android:textColor="#cccccc"
            android:textSize="14dp"
            android:layout_below="@+id/company"
            android:layout_alignLeft="@+id/company"
            android:layout_alignStart="@+id/company"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="2dp"/>

    </RelativeLayout>


</FrameLayout>


